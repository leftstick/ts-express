{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "devbuild",
            "args": ["run", "devbuild"]
        },
        {
            "taskName": "dev",
            "args": ["run", "dev"]
        },
        {
            "taskName": "distbuild",
            "args": ["run", "distbuild"]
        },
        {
            "taskName": "start",
            "args": ["start"]
        }
    ]
}