// Place your settings in this file to overwrite default and user settings.
{
    "editor.formatOnSave": true,
    "eslint.enable": true,
    "typescript.format.enable": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.js.map": true
    }
}